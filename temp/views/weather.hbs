<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>
    {{>navBar}}
    <!-- main header -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">

                {{!-- Search Bar --}}
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" placeholder="Enter ur city name..." autocomplete="off">
                        <input type="submit" value="search" id="submitBtn">
                    </form>
                </div>

                {{!--Temp Info--}}
                <div class="tempInformation">
                    <div class="top_layer">
                        <p id="day">Tuesday</p>
                        <p id="today_date">13 OCT</p>
                    </div>

                    <div class="main_layer">
                        <p id="city_name">Get O/P</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa fa-cloud" arial-hidden="true"></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    {{>footer}}



    <script src="js/main.js"></script>
    <script>
        const getCurrDay = () => {
            var weekDay = new Array(7);
            weekDay[0] = "Sunday";
            weekDay[1] = "Monday";
            weekDay[2] = "Tuesday";
            weekDay[3] = "Wednesday";
            weekDay[4] = "Thursday";
            weekDay[5] = "Friday";
            weekDay[6] = "Saturday";

            var currTime = new Date();
            console.log(currTime.getDate());
            console.log(currTime.getMonth() + 1);
            let days = weekDay[currTime.getDay()];
            console.log(days);
            let day = document.getElementById("day");
            day.innerText = days;
        }
        getCurrDay();


        const getCurrTime = () => {
            var months = [
                "Jan",
                "Feb",
                "March",
                "April",
                "May",
                "June",
                "July",
                "Aug",
                "Sep",
                "Oct",
                "Nov",
                "Dec",
            ];

            var now = new Date();
            var month = months[now.getMonth()];  // Actual data start from 0 so we are adding 1.
            var date = now.getDate();
            let today_date = document.getElementById('today_date');
            today_date.innerText = `${date} ${month}`;
        }

        getCurrTime();
    </script>
</body>

</html>